<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView

        android:padding="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:gravity="center"
        android:text="Tiêu chí sắp xếp"
        android:background="@color/transparentBackgroundDangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:id="@+id/txt_gan_toi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Gần tôi" />

    <TextView
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:id="@+id/txt_danh_gia_cao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Đánh giá cao" />

    <TextView
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:id="@+id/txt_theo_ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Theo tên nhà hàng" />

</LinearLayout>